<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:weightSum="1"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Disaster Alert"
            android:id="@+id/textView"
            android:textSize="40dp"
            android:textColor="#fffff718"
            android:textColorHighlight="#ff1b1aff"
            android:textStyle="bold"
            android:focusable="false"
            android:textIsSelectable="false" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/facebookbutton"
            android:background="@drawable/iconf"
            android:layout_marginLeft="40dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView2"
            android:autoText="false"
            android:text="ขณะนี้สถานการณ์น้ำปกติ..."
            android:background="#ffffffff"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:id="@+id/imageView"
            android:layout_weight="0.04"
            android:adjustViewBounds="false"
            android:background="@drawable/w"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="result"
            android:id="@+id/txtResult"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="401dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/watherbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icona" />

        <ImageButton
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/waterlevelbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iconb" />

        <ImageButton
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/waterinriverbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iconc" />

        <ImageButton
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/dailytidalbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icond" />

        <ImageButton
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/emergencycallbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icone" />

    </LinearLayout>

</LinearLayout>